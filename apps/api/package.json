{
	"name": "hike",
	"private": true,
	"version": "0.1.0",
	"description": "轻量级后端框架",
	"license": "MIT",
	"scripts": {
		"build": "nest build",
		"start": "node dist/main",
		"dev": "NODE_ENV=development nest start -b swc -w",
		"clean": "rimraf dist && rimraf node_modules && rimraf tsconfig.tsbuildinfo",
		"format": "pnpm biome format --write .",
		"db": "NODE_ENV=development drizzle-kit"
	},
	"engines": {
		"npm": ">=8.0.0",
		"node": ">=16.0.0"
	},
	"dependencies": {
		"@hikestack/clusterize": "workspace:^",
		"@hikestack/logger": "workspace:^",
		"@nestjs/bullmq": "^10.2.3",
		"@nestjs/common": "^10.3.2",
		"@nestjs/config": "^3.3.0",
		"@nestjs/core": "^10.4.4",
		"@nestjs/platform-express": "^10.4.4",
		"bcryptjs": "^2.4.3",
		"bullmq": "^5.12.10",
		"drizzle-orm": "^0.38.0",
		"kleur": "^4.1.5",
		"mysql2": "^3.11.5",
		"reflect-metadata": "^0.2.1",
		"rxjs": "^7.8.1",
		"winston": "^3.14.2"
	},
	"devDependencies": {
		"@dotenvx/dotenvx": "^1.29.0",
		"@nestjs/cli": "^10.4.5",
		"@nestjs/schematics": "^10.1.0",
		"@nestjs/testing": "^10.3.2",
		"@swc/cli": "^0.3.9",
		"@swc/core": "^1.4.0",
		"@types/express": "^4.17.21",
		"@types/jest": "^29.5.12",
		"@types/node": "^20.17.6",
		"@types/supertest": "^6.0.2",
		"@typescript-eslint/eslint-plugin": "^6.21.0",
		"@typescript-eslint/parser": "^6.21.0",
		"drizzle-kit": "^0.30.0",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-prettier": "^5.1.3",
		"jest": "^29.7.0",
		"prettier": "^3.2.5",
		"source-map-support": "^0.5.21",
		"supertest": "^6.3.4",
		"swc-loader": "^0.2.6",
		"ts-jest": "^29.1.2",
		"ts-loader": "^9.5.1",
		"ts-node": "^10.9.2",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.3.3"
	},
	"jest": {
		"moduleFileExtensions": ["js", "json", "ts"],
		"rootDir": "src",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": ["**/*.(t|j)s"],
		"coverageDirectory": "../coverage",
		"testEnvironment": "node"
	}
}
